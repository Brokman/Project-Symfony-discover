{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="text-center bg-light p-4">
        <h1>Blog Brok</h1>
    </div>

    {% if app.user %}
        {% for message in app.flashes('success') %}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col col-6">
                    <div class="alert alert-success">
                        {{ message }} as
                        {% if is_granted('ROLE_ADMIN') %}
                            <strong>Admin</strong>
                        {% else %}
                            <strong>User</strong>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    {% endif %}
    
    {% for message in app.flashes('notice') %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-6">
                <div class="alert alert-warning">
                    {{ message }}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

    <div class="container">
        <h2>Last Articles</h2>
        <div class="row flex gy-3">
            {% for article in articles %}
                <div class="col-6 col-xxl-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href=" {{ path('article.show', {id: article.id, slug: article.slug}) }} ">{{ article.title }}</a>
                            </h5>
                            <p class="card-text"> {{ article.description | u.truncate(145, '...')}} </p>
                            <div class="text-muted" style="font-weight: 100; font-size:0.8rem">Créé le {{ article.createdat.format('Y-m-d') }} à {{ article.createdat.format('H:i') }}  </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}