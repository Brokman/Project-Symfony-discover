{% extends "base.html.twig" %}

{% block title %}Index des Articles{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Articles</h1>
    </div>
    <div class="container">
        <div class="row flex">
            {% for article in articles %}
                <div class="col-6 col-xxl-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href=" {{ path('article.show', {id: article.id, slug: article.slug}) }} ">{{ article.title }}</a>
                            </h5>
                            <p class="card-text"> {{ article.description }} </p>
                            <div class="text-muted" style="font-weight: 100; font-size:0.8rem">Créé le {{ article.createdat.format('Y-m-d') }} à {{ article.createdat.format('H:i') }}  </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="fixed-bottom d-grid gap-2 d-md-flex justify-content-md-end">
        <div class="m-4 pb-5">
            <a href="{{ path('admin.article.index') }}" class="btn btn-outline-secondary">Admin Panel</a>
        </div>    
    </div>
{% endblock %}