{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="row justify-content-center mt-4">
                <div class="col col-6">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if error %}
            <div class="col col-6 mt-4">
                <div class="alert alert-danger">
                    {{ error.messageKey | trans(error.messagedata, 'security') }}
                </div>
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="POST">
            <div class="col col-6">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                </div>
            </div>
            <div class="col col-6">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="_password" class="form-control">
                </div>
            </div>
            
            <div class="row justify-content-center">
                <div class="col col-3">
                    <button type="submit" class="btn btn-outline-primary mt-3">Connect</button>
                </div>
            </div>
        </form>

        <div class="row justify-content-center align-items-center mt-5">
            <div class="col-6">
                <p class="text-end mb-0">New user ?</p>
            </div>
            <div class="col-3">
                <a href="{{ path('login.create') }}"><button class="btn btn-outline-success">Register</button></a>
            </div>
        </div>

    </div>

    
{% endblock %}